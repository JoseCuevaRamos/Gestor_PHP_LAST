{
  "name": "josecueva/gestor-proyectos-php",
  "description": "Una aplicación para la gestión de proyectos.",
  "authors": [
    {
      "name": "Jose Cueva",
      "email": "josenil2002@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "slim/slim": "^3.9",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.23",
    "illuminate/database": "^5.5",
    "robmorgan/phinx": "^0.14.0",
    "vlucas/phpdotenv": "^2.4",
    "tuupola/slim-jwt-auth": "^2.3",
    "fzaninotto/faker": "^1.7",
    "respect/validation": "^1.1",
    "league/fractal": "^0.17.0",
    "google/apiclient": "^2.0",
    "phpmailer/phpmailer": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.4"
  },
  "autoload": {
    "psr-4": {
      "Conduit\\": "src/Conduit",
      "App\\Database\\Migrations\\": "database/generator/"
    },
    "classmap": [
      "database/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0,
    "platform-check": false,
    "block-insecure": false,
    "audit": {
      "ignore": ["PKSA-2kqm-ps5x-s4f5"]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env'); \""
    ],
    "start": "php -S localhost:8080 -t public public/index.php",
    "test": "vendor/bin/phpunit",
    "refresh-database": "php vendor/bin/phinx rollback -t0; php vendor/bin/phinx migrate; php vendor/bin/phinx seed:run"
  }
}
